
@model tl2_tp10_2023_juanigramajo.ViewModels.Tareas.ModificarTareaViewModel

<form asp-controller="Tarea" asp-action="EditarTarea">
    <input hidden asp-for="@Model.Id">

    <div class="mb-3" class="form-group">
        <label asp-for="@Model.Nombre" class="form-label"></label>
        <input asp-for="@Model.Nombre" class="form-control"/>
    </div>

    <div class="mb-3" class="form-group">
        <label asp-for="@Model.Estado" class="form-label"></label>
        <select asp-for="@Model.Estado" class="form-select" aria-label="Default select example">
            <option value="Ideas" selected>Ideas</option>
            <option value="ToDo">ToDo</option>
            <option value="Doing">Doing</option>
            <option value="Review">Review</option>
            <option value="Done">Done</option>
        </select>
    </div>

    <div class="mb-3" class="form-group">
        <label asp-for="@Model.Descripcion" class="form-label"></label>
        <input asp-for="@Model.Descripcion" class="form-control"/>
    </div>

    <div class="mb-3" class="form-group">
        <label asp-for="@Model.Color" class="form-label"></label>
        <input asp-for="@Model.Color" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-info">Editar</button>
</form>


@section Scripts { <partial name="_ValidationScriptsPartial" /> }