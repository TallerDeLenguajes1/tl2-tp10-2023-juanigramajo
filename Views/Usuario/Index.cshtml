@{
    ViewData["Title"] = "Home Page";
}

@model List<Producto>

<h2>Listado de Usuarios</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td hidden>@user.Id</td>
                <td>@user.Nombre</td>
                <td>
                    <a asp-controller="Usuario" asp-action="EditarUsuario" asp-route-idUsuario="@user.Id">Editar</a>
                    <a asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-idUsuario="@user.Id" onclick="return confirm('¿Estás seguro que quieres eliminar el usuario?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
</table>